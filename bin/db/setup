#! /usr/bin/bash
set -e # stop it if it failed at any stage

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="sqldb-welcome-setup"
printf "${CYAN}==== ${LABEL}${NO_COLOR}\n"

ABS_PATH=$(readlink -f "$0")
DB_PATH=$(dirname $ABS_PATH)

source "$DB_PATH/db/drop"
source "$DB_PATH/db/create"
source "$DB_PATH/db/schema-load"
source "$DB_PATH/db/seed"
python "$DB_PATH/db/update_cognito_user_ids"

